import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

public class Board{
	static ArrayList<Sector> SectorList = new ArrayList<Sector>();
	
	public static void SetBoard() throws IOException{
		File.createTempFile("Test", ".txt");
		
		File file = new File("MapData.txt");
		
		try{
			Scanner MapData = new Scanner(file);
			String[] FirstLine = MapData.nextLine().split(",");
			for(int i = 0; i < FirstLine.length ;i++){
				Sector temp = new Sector(FirstLine[i]);
				SectorList.add(temp);
				System.out.println(temp.getName());
				
				
			MapData.close();
			}
			
			
			
			
		}
		catch(FileNotFoundException e){
			System.out.println("File not Found");
		}

		//Use this space to initialize all sectors 
		
		
		
	}
}